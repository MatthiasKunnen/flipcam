[Unit]
Description=dnsmasq - A lightweight DHCP and caching DNS server for flipcam
Documentation=man:dnsmasq(8)
After=network.target
Before=network-online.target nss-lookup.target
Wants=nss-lookup.target
Conflicts=dnsmasq.service

[Service]
Type=dbus
BusName=uk.org.thekelleys.dnsmasq
ExecStartPre=/usr/bin/dnsmasq --test --conf-file={{.ConfFilePath}}
ExecStart=/usr/bin/dnsmasq -k --enable-dbus --user=dnsmasq --conf-file={{.ConfFilePath}} --pid-file
ExecReload=/bin/kill -HUP $MAINPID
Restart=on-failure
PrivateDevices=true
ProtectSystem=full

[Install]
WantedBy=multi-user.target
